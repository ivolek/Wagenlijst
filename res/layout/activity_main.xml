<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <Button
        android:id="@+id/buttonZoeken"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Zoeken!" 
        android:focusable="false"
        android:onClick="zoekButtonPressed"/>

    <EditText
        android:id="@+id/zoekenBusNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ZoekButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ZoekButton"
        android:ems="10" 
        android:inputType="number"
            android:imeOptions="actionSearch"
        android:hint="Vul een busnummer in."/>
    
<ListView android:id="@android:id/list"
        android:layout_width="1px"
        android:layout_height="1px"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/zoekenBusNr" />

</RelativeLayout>